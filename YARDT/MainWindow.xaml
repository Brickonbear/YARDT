<Window x:Class="YARDT.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="YARDT" Height="600" Width="250" Topmost="True" MaxWidth="250" MaxHeight="1080" MinWidth="250" MinHeight="100" WindowStyle="None" Background="#FF1E1E1E">

    <DockPanel x:Name="RootWindow">
        <DockPanel x:Name="TitleBar" DockPanel.Dock="Top">
            <Button
                DockPanel.Dock="Right">
                <StackPanel>
                    <Image x:Name="CloseButton"
                   Source="pack://siteoforigin:,,,/Resources/CloseButton.bmp" 
                   Width="16" 
                   Height="16"
                    MouseLeftButtonDown="CloseButton_MouseLeftButtonDown"/>
                </StackPanel>
            </Button>
            <Image x:Name="CollapseButton"
                   Source="pack://siteoforigin:,,,/Resources/CollapseButton.bmp" 
                   Width="16" 
                   Height="16"
                   DockPanel.Dock="Right" MouseLeftButtonDown="CollapseButton_MouseLeftButtonDown"/>
            <Image x:Name="OptionsButton"
                   Source="pack://siteoforigin:,,,/Resources/OptionsButton.bmp" 
                   Width="16" 
                   Height="16"
                   DockPanel.Dock="Right"/>
            <TextBlock HorizontalAlignment="Center">Application Name</TextBlock>
        </DockPanel>

        <ScrollViewer Margin="5,5,5,5" Name="scrollViewer1" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" >
            <StackPanel x:Name="sp" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="240"/>
        </ScrollViewer>
    </DockPanel>



</Window>